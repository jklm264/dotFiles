# ~~Alias' Section~~
##### Common #####
alias pingg='ping 8.8.8.8'
alias iff='ifconfig en0 | awk '\''$1 == "inet" {print $2}'\'''
alias ll='ls -alhf@'
alias cli_histogram='sort | uniq -c | sort -n'
alias wms='wormhole send $1'
alias wmr='wormhole recieve'
alias mv="mv -i"           # -i prompts before overwrite
alias cp="cp -i"           # -i prompts before overwrite
alias mkdir="mkdir -p"

##### Git #####
alias ga='git add'
alias gs='git status'
alias gmsg='git commit -m $1'
alias gp='git push'
alias gc='git clone'
alias gcquar='git clone https://github.com/jklm264/quarantine_learning.git'
alias gcforensics='git clone https://github.com/jklm264/My-Forensics-Notes.git'
# ~~End Alias' Section~~

##### CD #####
